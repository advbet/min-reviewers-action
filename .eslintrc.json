{
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "jest",
    "@typescript-eslint"
  ],
  "overrides": [
    {
      "files": [
        "test/**"
      ],
      "plugins": [
        "jest"
      ],
      "extends": [
        "plugin:jest/recommended"
      ]
    }
  ],
  "root": true,
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "project": [
      "tsconfig.eslint.json"
    ]
  },
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  }
}
